@model List<ResultBannerDTO>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h1>Banner</h1>

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Title</th>
        <th>Description</th>
        <th>Remove</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td> <img style="height: 50px; width:50px" src=" @item.ImageUrl" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a asp-action="DeleteBanner" asp-route-id="@item.BannerId" class="btn btn-outline-primary">Delete</a></td>
            <td><a asp-action="EditBanner" asp-route-id="@item.BannerId" class="btn btn-outline-danger">Update</a></td>
        </tr>
    }

</table>

<a asp-action="CreateBanner" asp-controller="AdminAbout" class="btn btn-outline-success">Create Banner</a>